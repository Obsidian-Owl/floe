{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "PYTEST_TIMEOUT": "300",
    "PYTHON_VERSION": "3.10",
    "ENABLE_LSP_TOOL": "1"
  },
  "attribution": {
    "commit": "ðŸ¤– Generated with Claude Code\n\n<noreply@anthropic.com>",
    "pr": "ðŸ¤– Generated with [Claude Code](https://claude.com/claude-code)"
  },
  "model": "claude-opus-4-5-20251101",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/session-recover --quiet 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/save-epic-checkpoint 2>/dev/null || true"
          }
        ]
      },
      {
        "matcher": "manual",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/save-epic-checkpoint 2>/dev/null || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "if echo \"$TOOL_INPUT\" | grep -q 'gh pr create'; then ./scripts/pre-pr-gate; fi"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" == *.py ]]; then python -m black --line-length 100 \"$FILE_PATH\" 2>/dev/null || true; fi"
          },
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" == *.py ]]; then python -m isort \"$FILE_PATH\" 2>/dev/null || true; fi"
          },
          {
            "type": "command",
            "command": "if [[ \"$FILE_PATH\" == *.py ]]; then ./scripts/check-architecture-drift \"$FILE_PATH\" 2>/dev/null || true; fi"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "security-guidance@claude-plugins-official": true,
    "linear@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true
  },
  "companyAnnouncements": [
    "ðŸ”’ Security: Never commit secrets or use eval()/exec()",
    "ðŸ“ Type Safety: Use Pydantic for ALL data validation",
    "âœ… Quality: Maintain > 80% test coverage",
    "ðŸ“š Skills: Invoke skills from .claude/skills/ for component work"
  ]
}
