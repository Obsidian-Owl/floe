# direnv configuration for floe development
# Install direnv: brew install direnv
# Then run: direnv allow

# Use latest pyright version (avoids version warning)
export PYRIGHT_PYTHON_FORCE_VERSION=latest

# Main floe repo location (for worktrees to find .env)
FLOE_MAIN_REPO="/Users/dmccarthy/Projects/floe"

# Load .env from main repo (works for both main and worktrees)
if [[ -f "$FLOE_MAIN_REPO/.env" ]]; then
    dotenv "$FLOE_MAIN_REPO/.env"
fi

# Also load local .env if it exists (for worktree-specific overrides)
dotenv_if_exists
