{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://floe.dev/schemas/floe-jobs-values.json",
  "title": "floe-jobs Helm Values",
  "description": "JSON Schema for floe-jobs Helm chart values.yaml",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "description": "Global settings",
      "properties": {
        "environment": {
          "type": "string",
          "enum": ["dev", "qa", "staging", "prod", "test"],
          "default": "dev"
        }
      }
    },
    "platform": {
      "type": "object",
      "description": "Platform integration settings",
      "properties": {
        "release": {
          "type": "string",
          "description": "floe-platform release name"
        },
        "namespace": {
          "type": "string",
          "description": "Platform namespace"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "default": true
        },
        "name": {
          "type": "string"
        }
      }
    },
    "dbt": {
      "type": "object",
      "description": "dbt job configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"]
            }
          }
        },
        "profiles": {
          "type": "object",
          "description": "dbt profiles.yml content"
        },
        "jobs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "command": {
                "type": "array",
                "items": { "type": "string" }
              },
              "schedule": { "type": "string" },
              "resources": { "type": "object" }
            },
            "required": ["name", "command"]
          }
        }
      }
    },
    "ingestion": {
      "type": "object",
      "description": "Data ingestion job configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false
        },
        "image": {
          "type": "object",
          "properties": {
            "repository": { "type": "string" },
            "tag": { "type": "string" }
          }
        },
        "jobs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "source": { "type": "string" },
              "schedule": { "type": "string" }
            }
          }
        }
      }
    },
    "custom": {
      "type": "object",
      "description": "Custom job definitions",
      "properties": {
        "jobs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "image": { "type": "string" },
              "command": {
                "type": "array",
                "items": { "type": "string" }
              },
              "schedule": { "type": "string" },
              "env": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": { "type": "string" },
                    "value": { "type": "string" }
                  }
                }
              }
            },
            "required": ["name", "image", "command"]
          }
        }
      }
    },
    "resources": {
      "type": "object",
      "description": "Default resource requirements",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string" },
            "memory": { "type": "string" }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string" },
            "memory": { "type": "string" }
          }
        }
      }
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "tolerations": {
      "type": "array",
      "items": { "type": "object" }
    },
    "affinity": {
      "type": "object"
    }
  }
}
